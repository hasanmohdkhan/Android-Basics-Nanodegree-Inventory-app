<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGray">

    <android.support.v7.widget.CardView
        style="@style/CardViewStyleListView"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/margin_8dp"
        app:cardElevation="@dimen/dimen_0dp">

        <RelativeLayout style="@style/WidthMatchHeightWrap">


            <ImageView
                android:id="@+id/image_view_product_image"
                style="@style/ImageListViewStyle"
                android:contentDescription="@string/todo"
                tools:src="@drawable/ic_storage" />

            <TextView
                android:id="@+id/tv_product_name"
                style="@style/ProductNameTextViewStyle"
                android:layout_toEndOf="@id/image_view_product_image"
                android:layout_toRightOf="@id/image_view_product_image"
                tools:text="@string/dummy_product_name" />

            <TextView
                android:id="@+id/tv_product_price"
                style="@style/ProductNameTextViewStyle"
                android:layout_below="@id/tv_product_name"
                android:layout_marginTop="@dimen/margin_4dp"
                android:layout_toEndOf="@id/image_view_product_image"
                android:layout_toRightOf="@id/image_view_product_image"
                android:textStyle="normal"
                tools:text="@string/dummy_cost" />

            <TextView
                android:id="@+id/tv_product_quantity"
                style="@style/ProductNameTextViewStyle"
                android:layout_below="@id/tv_product_price"
                android:layout_marginTop="@dimen/margin_4dp"
                android:layout_toEndOf="@id/image_view_product_image"
                android:layout_toRightOf="@id/image_view_product_image"
                android:text="@string/dummy_quantity"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_product_supplier"
                style="@style/ProductNameTextViewStyle"
                android:layout_below="@id/tv_product_quantity"
                android:layout_marginTop="@dimen/margin_4dp"
                android:layout_toEndOf="@id/image_view_product_image"
                android:layout_toRightOf="@id/image_view_product_image"
                android:textStyle="normal"
                tools:text="@string/dummy_supplier" />

            <TextView
                android:id="@+id/tv_product_supplier_number"
                style="@style/ProductNameTextViewStyle"
                android:layout_below="@id/tv_product_supplier"
                android:layout_marginTop="@dimen/margin_4dp"
                android:layout_toEndOf="@id/image_view_product_image"
                android:layout_toRightOf="@id/image_view_product_image"
                android:textStyle="normal"
                tools:text="@string/dummy_phone" />


            <ImageView
                android:id="@+id/btn_sale"
                style="@style/SaleIconStyle"
                android:layout_below="@id/tv_product_supplier_number"
                android:layout_toEndOf="@id/image_view_product_image"
                android:layout_toRightOf="@id/image_view_product_image"
                android:contentDescription="@string/sale_button"
                android:src="@drawable/ic_sale" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>