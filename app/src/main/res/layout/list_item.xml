<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGray">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:layout_marginBottom="@dimen/margin_8dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/margin_8dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imgview_product_image"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_height"
                android:layout_margin="@dimen/margin_8dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_storage" />

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_toEndOf="@id/imgview_product_image"
                android:layout_toRightOf="@id/imgview_product_image"
                android:text="@string/dummy_product_name" />

            <TextView
                android:id="@+id/tv_product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_product_name"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_4dp"
                android:layout_toEndOf="@id/imgview_product_image"
                android:layout_toRightOf="@id/imgview_product_image"
                android:text="@string/dummy_cost" />

            <TextView
                android:id="@+id/tv_product_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_product_price"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_4dp"
                android:layout_toEndOf="@id/imgview_product_image"
                android:layout_toRightOf="@id/imgview_product_image"
                android:text="@string/dummy_quantity" />

            <TextView
                android:id="@+id/tv_product_supplier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_product_quantity"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_4dp"
                android:layout_toEndOf="@id/imgview_product_image"
                android:layout_toRightOf="@id/imgview_product_image"
                android:text="@string/dummy_supplier" />

            <TextView
                android:id="@+id/tv_product_supplier_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_product_supplier"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_4dp"
                android:layout_toEndOf="@id/imgview_product_image"
                android:layout_toRightOf="@id/imgview_product_image"
                android:text="@string/dummy_phone" />


            <ImageView
                android:id="@+id/btn_sale"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@id/tv_product_supplier_number"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_toEndOf="@id/imgview_product_image"
                android:layout_toRightOf="@id/imgview_product_image"
                android:contentDescription="@string/sale_button"
                android:src="@drawable/ic_sale" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>