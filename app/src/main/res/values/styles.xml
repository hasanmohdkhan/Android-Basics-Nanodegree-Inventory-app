<resources xmlns:tools="http://schemas.android.com/tools">
    <!--TODO Add a new theme for details view activity -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="InputText">
        <item name="android:layout_margin">@dimen/margin_16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="InputTextEditor">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/margin_16dp</item>
        <item name="android:textColorHint">@color/colorAccent</item>

    </style>

    <style name="LinearLayoutDetailInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>

    </style>

    <style name="Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_22sp</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">@dimen/margin_16dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_8dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="CardViewDetailInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageViewCommon">
        <item name="android:layout_width">@dimen/margin_24dp</item>
        <item name="android:layout_height">@dimen/margin_24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/margin_16dp</item>
    </style>

    <style name="TextViewCommon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_16dp</item>
        <item name="android:textSize">@dimen/tv_16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ViewDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_4dp</item>
    </style>

    <style name="CardViewStyleListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_16dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_8dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_8dp</item>
        <item name="android:layout_marginRight">@dimen/margin_8dp</item>


    </style>

    <style name="WidthMatchHeightWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="ImageListViewStyle">
        <item name="android:layout_width">@dimen/image_width</item>
        <item name="android:layout_height">@dimen/image_height</item>
        <item name="android:layout_margin">@dimen/margin_8dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ProductNameTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">@dimen/margin_8dp
        </item>
        <item name="android:layout_marginLeft" tools:targetApi="jelly_bean_mr1">@dimen/margin_8dp
        </item>
        <item name="android:textStyle">bold</item>


    </style>

    <style name="SaleIconStyle">
        <item name="android:layout_width">@dimen/sale_btn_48dp</item>
        <item name="android:layout_height">@dimen/sale_btn_48dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">@dimen/margin_16dp
        </item>
        <item name="android:layout_marginTop" tools:targetApi="jelly_bean_mr1">@dimen/margin_16dp
        </item>
        <item name="android:layout_marginLeft">@dimen/margin_8dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_8dp</item>
    </style>

    <style name="ListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">@null</item>

    </style>

    <style name="EmptyListView">
        <item name="android:layout_width">@dimen/empty_image_300dp</item>
        <item name="android:layout_height">@dimen/empty_image_300dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@drawable/ic_storage</item>
    </style>

    <style name="EmptyViewRelativeLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="EmptyTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-medium</item>
        <item name="android:paddingTop">@dimen/margin_16dp</item>
        <item name="android:text">@string/empty_view_title_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="FabAddNewItem">
        <item name="android:layout_width">@dimen/fab_dimen_56dp</item>
        <item name="android:layout_height">@dimen/fab_dimen_56dp</item>
        <item name="android:layout_marginRight">@dimen/margin_16dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_16dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorAccent</item>

    </style>

    <style name="MainActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorGray</item>
    </style>

    <style name="PreViewImage">
        <item name="android:layout_width">@dimen/preview_image_150dp</item>
        <item name="android:layout_height">@dimen/preview_image_150dp</item>
        <item name="android:layout_margin">@dimen/margin_8dp</item>
    </style>

    <style name="QuantityUpDownBtn">
        <item name="android:layout_width">@dimen/sale_btn_48dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_8dp</item>
        <item name="android:padding">@dimen/margin_8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>

    </style>
</resources>

